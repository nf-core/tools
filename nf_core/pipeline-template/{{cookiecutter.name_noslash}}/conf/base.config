/*
 * -------------------------------------------------
 *  {{ cookiecutter.name }} Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performance compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

process {

  // TODO nf-core: Check the defaults for all processes
  cpus = { set_resource(1 * task.attempt) }
  memory = { set_resource(7.GB * task.attempt) }
  time = { set_resource(4.h * task.attempt) }

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  maxRetries = 1
  maxErrors = '-1'

  // Process-specific resource requirements
  // NOTE - Only one of the labels below are used in the fastqc process in the main script.
  //        If possible, it would be nice to keep the same label naming convention when
  //        adding in your processes.
  // TODO nf-core: Customise requirements for specific processes.
  // See https://www.nextflow.io/docs/latest/config.html#config-process-selectors
  withLabel:process_low {
    cpus = { set_resource( 2 * task.attempt, 'cpus' ) }
    memory = { set_resource( 14.GB * task.attempt, 'memory' ) }
    time = { set_resource( 6.h * task.attempt, 'time' ) }
  }
  withLabel:process_medium {
    cpus = { set_resource( 6 * task.attempt, 'cpus' ) }
    memory = { set_resource( 42.GB * task.attempt, 'memory' ) }
    time = { set_resource( 8.h * task.attempt, 'time' ) }
  }
  withLabel:process_high {
    cpus = { set_resource( 12 * task.attempt, 'cpus' ) }
    memory = { set_resource( 84.GB * task.attempt, 'memory' ) }
    time = { set_resource( 10.h * task.attempt, 'time' ) }
  }
  withLabel:process_long {
    time = { set_resource( 20.h * task.attempt, 'time' ) }
  }
  withName:get_software_versions {
    cache = false
  }
  
}
